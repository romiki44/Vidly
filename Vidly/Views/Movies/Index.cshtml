@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

<div class="container">

    @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary btn-lg" })
    <table class="table table-hover table-bordered" style="width:100%; font-size:x-large">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.GenreName</td>
                </tr>
            }
        </tbody>
    </table>
</div>
